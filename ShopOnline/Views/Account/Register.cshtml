@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<div class="main__register">
    <h2>Welcome to</h2>
    <h1><a asp-controller="Client" asp-action="Home">DREAMS STORE</a></h1>
    <form action="">
        <input type="text" class="input-decor" placeholder="Full name">
        <input type="email" class="input-decor" placeholder="Email">
        <input type="text" class="input-decor" placeholder="Phone number">
        <div class="main__register-check-password">
            <input type="password" id="password" class="input-decor" oninput="strengthChecker()" placeholder="Password">
            <span id="toggle" onclick="toggle()">
                <i class="fas fa-eye"></i>
            </span>
            <div id="strength-bar"></div>
        </div>
        <p id="msg"></p>
        <div class="main__register-check-password">
            <input type="password" id="confirm-password" class="input-decor" oninput="checkPassword()" placeholder="Confirm password">
            <span id="toggle1" onclick="toggle1()">
                <i class="fas fa-eye"></i>
            </span>
        </div>
        <p id="check-confirm-pass"></p>
    </form>
    <input type="submit" value="REGISTER">
    <h3>Have an account? <a asp-action="Login">Login now !!!</a></h3>
</div>