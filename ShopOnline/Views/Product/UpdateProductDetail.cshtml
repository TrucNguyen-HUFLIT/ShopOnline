@model ShopOnline.Core.Models.Product.ProductDetailViewModel
@{
    ViewData["Title"] = "Update Product Detail";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4">
    <div class="d-block mb-4 mb-md-0">
        <nav aria-label="breadcrumb" class="d-none d-md-inline-block">
            <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent">
                <li class="breadcrumb-item">
                    <a href="#">
                        <svg class="icon icon-xxs" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg>
                    </a>
                </li>
                <li class="breadcrumb-item"><a>Product Management</a></li>
                <li class="breadcrumb-item active" aria-current="page">Update Product Detail</li>
            </ol>
        </nav>
        <h2 class="h4">Update Product Detail</h2>
    </div>
</div>
<div class="row">
    <div class="col-12 col-xl-12">
        <div class="card card-body border-0 shadow mb-4">
            <h2 class="h5 mb-4">General information</h2>
            <form asp-action="UpdateProductDetail" enctype="multipart/form-data" id="update-product-detail-form">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="col-md-6 mb-3" hidden>
                            <div>
                                <label>Id Staff</label>
                                <input asp-for="productDetailUpdate.Id" class="form-control" type="text">
                                <span asp-validation-for="productDetailUpdate.Id" class="text-danger"></span>
                            </div>
                        </div>
                        <div>
                            <label asp-for="productDetailUpdate.Name"></label>
                            <input asp-for="productDetailUpdate.Name" class="form-control" type="text" placeholder="Enter product detail name">
                            <span asp-validation-for="productDetailUpdate.Name" class="text-danger" id="Err_Name"></span>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <span class="text-danger" id="productDetailAlready"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Status</label>
                        <select class="form-select w-100 mb-0" asp-for="productDetailUpdate.Status">
                            <option value="1">Availble</option>
                            <option value="2">Unavailble</option>
                        </select>
                        <input asp-for="productDetailUpdate.Status" hidden />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>ProductType</label>
                        <select class="form-select mb-0" asp-for="productDetailUpdate.IdProductType">
                            @foreach (var item in Model.ListProductType)
                            {
                                <option value="@item.Id">@item.Name </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="productDetailUpdate.Price"></label>
                            <input asp-for="productDetailUpdate.Price" class="form-control" id="number" type="number" placeholder="No.">
                            <span asp-validation-for="productDetailUpdate.Price" class="text-danger" id="Err_Price"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div>
                            <label asp-for="productDetailUpdate.Description">Description</label>
                            <textarea class="form-control" asp-for="productDetailUpdate.Description" placeholder="Description..." id="textarea" rows="4"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 mb-3">
                        <div class="form-group">
                            <label>Choose Picture 1</label>
                            <input asp-for="productDetailUpdate.UploadPic1" type="file" accept="image/*" class="form-control" onchange="document.getElementById('output').src = window.URL.createObjectURL(this.files[0])" />
                            <span asp-validation-for="productDetailUpdate.UploadPic1" class="text-danger" id="Err_UploadPic1"></span>
                        </div>
                    </div>
                    <div class="col-sm-4 mb-3">
                        <div class="form-group">
                            <img class="rounded avatar-xl" src="@(Model.productDetailUpdate.Pic1 != null? Url.Content(Model.productDetailUpdate.Pic1) :"")" id="output" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 mb-3">
                        <div class="form-group">
                            <label for="address">Choose Picture 2</label>
                            <input asp-for="productDetailUpdate.UploadPic2" type="file" accept="image/*" class="form-control" onchange="document.getElementById('output').src = window.URL.createObjectURL(this.files[0])" />
                        </div>
                    </div>
                    <div class="col-sm-4 mb-3">
                        <div class="form-group">
                            <img class="rounded avatar-xl" src="@(Model.productDetailUpdate.Pic2 != null? Url.Content(Model.productDetailUpdate.Pic2) :"")" id="output" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 mb-3">
                        <div class="form-group">
                            <label for="address">Choose Picture 3</label>
                            <input asp-for="productDetailUpdate.UploadPic3" type="file" accept="image/*" class="form-control" onchange="document.getElementById('output').src = window.URL.createObjectURL(this.files[0])" />
                        </div>
                    </div>
                    <div class="col-sm-4 mb-3">
                        <div class="form-group">
                            <img class="rounded avatar-xl" src="@(Model.productDetailUpdate.Pic3 != null? Url.Content(Model.productDetailUpdate.Pic3) :"")" id="output" />
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-gray-800 mt-2 animate-up-2">Save all</button>
                </div>
            </form>
        </div>
    </div>
</div>
